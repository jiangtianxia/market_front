/* pages/add/add.wxss */

.container {
  width: 100%;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
}

.form-group {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 30rpx;
}

.label {
  color: #302f2f;
  width: 115rpx;
}

.input {
  height: 80rpx;
  width: 600rpx;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
}

.category-picker {
  height: 80rpx;
  width: 600rpx;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
}

.category-input {
  height: 80rpx;
  width: 100%;
}

.description-form-group {
  width: 100%;
  display: flex;
  flex-direction: row;
  /* align-items: center; */
  padding: 30rpx;
}

.description-label {
  /* font-size: 40rpx; */
  color: #302f2f;
  width: 115rpx;
}

.description-textarea {
  width: 600rpx;
  height: 300rpx;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
}

.submit-btn {
  background-color: #f38d7a;
  color: #fff;
  border: none;
  font-size: 36rpx;
  cursor: pointer;
}

.contact-input {
  height: 80rpx;
  width: 560rpx;
  /* width: 100%; */
  /* width: 520rpx; */
  /* margin-left: 40rpx; */
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
}

/* .phone-label {
  height: 80rpx;
  width: 270rpx;
} */

.phone-input {
  height: 80rpx;
  width: 520rpx;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
}

/* 封面 */
.cover-form-group {
  display: flex;
  flex-direction: row;
  width: 100%;
}

.cover-img-box {
  width: 600rpx;
  height: 400rpx;
}

.up-cover-but{
  margin: 0 !important ;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  width: 100%;
  height: 100%;
  font-size: 200rpx;
  
  display: flex;
  justify-content: center;
  align-items: center;

  margin-top: 20rpx;
  color: #ccc;
}

.cover-preview {
  width: 100%;
  height: 100%;
  position: relative;
}

.cover-image {
  width: 95%;
  height: 100%;
  border: 1px solid #ccc;
}

.cover-remove-icon {
  position: absolute;
  top: -20rpx;
  right: 0;
  width: 50rpx;
  height: 50rpx;
  cursor: pointer;
  z-index: 1;
}

/* 描述图片 */
.description-img-form-group {
  display: flex;
  flex-direction: row;
  width: 100%;
}

.description-img-label {
  color: #302f2f;
  width: 300rpx;
}

.description-images {
  width: 840rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.up-desc-img-but {
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  width: 173rpx;
  height: 173rpx;

  background-color: #f8f8f7;
  font-size: 100rpx;
  text-align: center;
  line-height: 150%;
  color: #ccc;
}

.desc-img-item {
  width: 173rpx;
  height: 173rpx;
  position: relative;
}

.desc-img {
  width: 100%;
  height: 100%;
  border: 1px solid #ccc;
}

.desc-img-remove-icon {
  position: absolute;
  top: -20rpx;
  right: -30rpx;
  width: 50rpx;
  height: 50rpx;
  cursor: pointer;
  z-index: 1;
}


