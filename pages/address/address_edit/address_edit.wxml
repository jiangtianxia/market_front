<!--pages/address/address_edit/address_edit.wxml-->
 
<view class="container">
  <!-- 收货人 -->
  <view class="form-group">
    <text class="label">收货人： </text>
    <input class="input" type="text" placeholder="请输入收货人真实姓名" bindinput="inputName" value="{{name}}"/>
  </view>

  <!-- 手机号 -->
  <view class="form-group">
    <text class="label">手机号： </text>
    <input class="input" type="text" placeholder="请输入收货人手机号" bindinput="inputName" value="{{name}}"/>
  </view>

  <!-- 详细地址 -->
  <view class="address-form-group">
    <text class="address-label">详细地址： </text>
    <textarea class="address-textarea" maxlength="200" placeholder="请输入收货人详细地址" bindinput="inputDescription" value="{{address}}"></textarea>
  </view>

  <!-- 发布按钮 -->
  <view class="submit-btn-box">
    <button class="submit-btn" bindtap="submitForm">
      <text>保存</text>
    </button>
  </view>
</view>