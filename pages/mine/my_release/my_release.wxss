/* pages/mine/my_release/my_release.wxss */

/* 顶部 */
.meun-wrap {
  display: flex;
  flex-direction: row;
  margin: 20rpx 20rpx;
  padding: 10rpx 0rpx;
  justify-content: space-between;
  border-bottom: 1rpx solid #eee;
}

.choose-type {
  border-bottom: 5rpx solid red;
  padding-bottom: 10rpx;
  color: red;
}

/* 商品信息 */
.good-box {
  margin: 20rpx 20rpx;
  border: 1rpx solid #eee;
  border-radius: 20rpx;
  padding: 20rpx 20rpx;
} 

.good-id {
  font-size: 28rpx;
  margin-bottom: 15rpx;
  font-weight: 550;
}

.good-wrap {
  display: flex;
  flex-direction: row;
  margin-bottom: 15rpx;
}

.good-img {
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.good-info-box {
  display: flex;
  flex-direction: column;
}

.good-title {
  font-size: 35rpx;

  /* 处理文字超出范围, 限制文字显示 */
  width: 500rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.good-bottom {
  display: flex;
  flex-direction: row;
  width: 500rpx;
  justify-content: space-between;
  margin-top: 60rpx;
  font-size: 30rpx;
}


.line-item {
  margin: 10rpx 0;
  font-size: 30rpx;
}

.red {
  color: red;
}

.but-wrap {
  text-align: right;
}

.but {
  margin-left: 20rpx;
}

/* 模态框样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

/* 遮罩层样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5); /* 半透明黑色背景 */
}

/* 模态框内容样式 */
.modal-content {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: white;
  padding: 20rpx;
  border-radius: 10rpx;
  width: 500rpx;
  height: 250rpx;
}

.add-stock-title {
  font-size: 40rpx;
}

/* 输入框容器样式 */
.input-container {
  margin: 20rpx;
  display: flex;
  flex-direction: column;
}

/* 输入框样式 */
input {
  width: 100%;
  height: 60rpx;
  margin: 10rpx 0;
  border: 1px solid #ccc;
  border-radius: 5rpx;
  box-sizing: border-box;
}

/* 按钮容器样式 */
.btn-container {
  display: flex;
  justify-content: space-between;
  width: 100%;
}

